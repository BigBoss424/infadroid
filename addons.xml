<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.infadroidwizard" name="Infadroid Wizard" version="1.0.3" provider-name="Infadroid.tk">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Infadroid Wizard</summary>
    <description lang="en">Infadroid Wizard provides an easy way to installing addons to your Infadroid device</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.aaarepo" name="  [COLOR lime][B]AAA [/COLOR][COLOR white]Repository[/B][/COLOR]" version="1.6.0" provider-name="AAARepo">
	<extension point="xbmc.addon.repository" name="  [COLOR lime][B]AAA [/COLOR][COLOR white]Repository[/B][/COLOR]">
        <info compressed="false">http://aaarepo.xyz/repo/addons.xml</info>
		<checksum>http://aaarepo.xyz/repo/addons.xml.md5</checksum>
		<datadir zip="true">http://aaarepo.xyz/repo/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install my Addons</summary>
		<description>Download and install addons from AAA Repo</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="repository.infadroid" name="Infadroid Boxes" version="1.0.1" provider-name="Infadroid Boxes">
    <extension point="xbmc.addon.repository" name="Infadroid Repository">
        <info>https://raw.githubusercontent.com/infadroidmx/infadroid/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/infadroidmx/infadroid/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/infadroidmx/infadroid/raw/master/zips</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>ALl the latest Infadroid Add-ons</summary>
        <description>Infadroid Add-ons</description>
        <disclaimer>General Disclaimer</disclaimer>
        <platform>all</platform>
    </extension>
</addon>

